<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:background="#ffffff"
    android:scrollbars="vertical" 
    android:fadingEdge="vertical"> 
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/TaskState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任务已发布"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/Separator"
        android:stretchColumns="0" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="配送信息"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Separator" />

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="送达时间"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/infoArriTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Separator" />
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="收货地址"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/infoAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Separator" />
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="领取人"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/infoRecipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Separator" />        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/infoPhoneReci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:autoLink="phone"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="N/A"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>        
        
    </TableLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alignmentMode="alignMargins"
        android:background="@color/Separator"
        android:columnCount="2"
        android:rowCount="7" >

        <TextView
            android:id="@+id/textView9"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="订单信息"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView10"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="悬赏额"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        
        <TextView
            android:id="@+id/textView11"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/infoCoinsNum"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="N/A"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView13"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="取快递时间"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/infoOrderTime"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="N/A"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView15"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="订单号"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/infoOrderNum"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="N/A"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </GridLayout>

   	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/taskMessage1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="物件大小" />
            
            <TextView
                android:id="@+id/task1_size"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="努力加载中" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/taskMessage2"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.98"
                android:text="取快递地址" />

            <TextView
                android:id="@+id/task1_Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力加载中" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/taskMessage3"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="手机尾号" />

            <TextView
                android:id="@+id/task1_Tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力加载中" />
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/taskMessage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.84"
                android:text="任务状态" />
            
            <TextView
                android:id="@+id/task1_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力加载中"/>
            
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/taskMessage5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.84"
                android:text="任务描述" />
            
            <TextView
                android:id="@+id/task_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力加载中"/>
            
        </LinearLayout>
        
    </LinearLayout>

   		<LinearLayout
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:gravity="bottom" >

   		    <Button
   		        android:id="@+id/AnnulTask"
   		        android:layout_width="wrap_content"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:text="撤销任务" />

   		    <Button
   		        android:id="@+id/ModifyTask"
   		        android:layout_width="wrap_content"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:text="修改任务" />

   		    <Button
   		        android:id="@+id/FinishTask"
   		        android:layout_width="wrap_content"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:text="确认收货" />
   		</LinearLayout>

   	</LinearLayout>


</ScrollView>