<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lazy_man_client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:allowTaskReparenting="false">
        <service android:name="com.example.lazy_man_client.NetService" >
        </service>

        <activity
            android:name="com.example.lazy_man_client.MainActivity"
            android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lazy_man_client.RegistActivity"
            android:label="@string/title_activity_regist" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.lazy_man_client.Mine_MissionActivity"
            android:label="@string/title_activity_mine__mission" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.lazy_man_client.AdDetailActivity"
            android:label="@string/title_activity_ad_detail" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.lazy_man_client.AdoptTaskActivity"
            android:label="@string/title_activity_adopt_task" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.lazy_man_client.ReDetailActivity"
            android:label="@string/title_activity_re_detail" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.lazy_man_client.ReleaseTaskActivity"
            android:label="@string/title_activity_release_task" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
                <activity
            android:name=".ChangeActivity"
            android:label="@string/title_activity_change" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name=".InformationActivity"
            android:label="@string/title_activity_information" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:label="@string/title_activity_password" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name=".AddressActivity"
            android:label="@string/title_activity_address" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
                <activity
            android:name=".AReleaseTask"
            android:label="@string/title_areleasetask" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name=".ATaskModify"
            android:label="@string/title_ataskmodify" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
                <receiver android:name=".NetworkStateReceiver"> 
            <intent-filter> 
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/> 
            </intent-filter> 
        </receiver>
    </application>

</manifest>