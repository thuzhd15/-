<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="此处应有甲方任务信息" />

    
    <Button
        android:id="@+id/FinishTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:text="确认收货" />

    <Button
        android:id="@+id/AnnulTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/FinishTask"
        android:layout_alignTop="@+id/FinishTask"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:text="撤销任务" />

    <Button
        android:id="@+id/ModifyTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AnnulTask"
        android:layout_alignTop="@+id/AnnulTask"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp"
        android:text="修改任务" />

</RelativeLayout>