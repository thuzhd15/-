<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="地址修改" >
    
    <LinearLayout 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:gravity="right">
		
		<TextView
				android:id="@+id/text_priority"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="优先地址" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="10"
		android:orientation="horizontal">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="10"
			android:orientation="vertical">
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/text_address_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="地址1" />

				<Spinner
					android:id="@+id/sp_section_1"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />

				<Spinner
					android:id="@+id/sp_address_1"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/text_address_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="地址2" />

				<Spinner
					android:id="@+id/sp_section_2"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />

				<Spinner
					android:id="@+id/sp_address_2"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/text_address_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="地址3" />

				<Spinner
					android:id="@+id/sp_section_3"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />

				<Spinner
					android:id="@+id/sp_address_3"
					android:layout_width="125dp"
					android:layout_height="wrap_content" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:orientation="horizontal" >

			<Button
				android:id="@+id/button_submit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="提交" />

			<Button
				android:id="@+id/button_backwards"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="返回" />
			</LinearLayout> 
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical">
			
			<RadioGroup
				android:id="@+id/radioGroup_priority"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >
				<RadioButton
					android:id="@+id/rb_address_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<RadioButton
					android:id="@+id/rb_address_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<RadioButton
					android:id="@+id/rb_address_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</RadioGroup>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
