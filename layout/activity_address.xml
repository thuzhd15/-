<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="地址修改" >
    
    <LinearLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TaskState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="修改地址"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="10dp" 
        android:paddingRight="5dp">
    
        <LinearLayout 
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
				android:layout_width="match_parent"
				android:layout_height="30dp"/>
	
	        <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

	            <TextView
				    android:id="@+id/text_address_1"
				    android:layout_width="60dp"
				    android:layout_height="60dp"
				    android:gravity="center_vertical"
				    android:text="地址1" />

			    <Spinner
				    android:id="@+id/sp_section_1"
				    android:textSize="12sp"
				    android:layout_width="90bp"
				    android:layout_height="wrap_content" />

			    <Spinner
				    android:id="@+id/sp_address_1"
				    android:textSize="12sp"
				    android:layout_width="90bp"
				    android:layout_height="wrap_content" />
			
		    </LinearLayout>
			
		    <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

				<TextView
					android:id="@+id/text_address_2"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:gravity="center_vertical"
					android:text="地址2" />

				<Spinner
					android:id="@+id/sp_section_2"
					android:textSize="12sp"
					android:layout_width="90bp"
				    android:layout_height="wrap_content"  />

				<Spinner
					android:id="@+id/sp_address_2"
					android:textSize="12sp"
					android:layout_width="90bp"
				    android:layout_height="wrap_content"  />
				
		    </LinearLayout>
		
		    <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

				<TextView
					android:id="@+id/text_address_3"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:gravity="center_vertical"
					android:text="地址3" />

				<Spinner
					android:id="@+id/sp_section_3"
					android:textSize="12sp"
					android:layout_width="90bp"
				    android:layout_height="wrap_content"  />

				<Spinner
					android:id="@+id/sp_address_3"
					android:textSize="12sp"
					android:layout_width="90dp"
				    android:layout_height="wrap_content"  />
				
		    </LinearLayout>
		
	    </LinearLayout>
	
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
		
		    <TextView
				android:id="@+id/text_priority"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center"
				android:text="优先地址" />
		    
		    <RadioGroup
				android:id="@+id/radioGroup_priority"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >
				
				<RadioButton
					android:id="@+id/rb_address_1"
					android:layout_width="wrap_content"
					android:layout_height="60dp" />
				
				<RadioButton
					android:id="@+id/rb_address_2"
					android:layout_width="wrap_content"
					android:layout_height="60dp" />
				
				<RadioButton
					android:id="@+id/rb_address_3"
					android:layout_width="wrap_content"
					android:layout_height="60dp" />
				
			</RadioGroup>
		    
	    </LinearLayout>
		
	</LinearLayout>
	
    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:gravity="bottom|center_horizontal"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/button_submit"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:text="提交" />

			<Button
				android:id="@+id/button_backwards"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:text="返回" />

	</LinearLayout>
	
</LinearLayout>