<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.zhouqian.myapplication.AReleaseTask">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重量"
        android:id="@+id/TaskRelease_A_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_Size"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TaskRelease_A_1"
        android:layout_toLeftOf="@+id/TaskRelease_A_Btn_Confirm"
        android:layout_toStartOf="@+id/TaskRelease_A_Btn_Confirm"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务描述"
        android:id="@+id/TaskRelease_A_2"
        android:layout_below="@+id/TaskRelease_A_Size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_Content"
        android:layout_below="@+id/TaskRelease_A_Size"
        android:layout_toRightOf="@+id/TaskRelease_A_2"
        android:layout_alignRight="@+id/TaskRelease_A_Size"
        android:layout_alignEnd="@+id/TaskRelease_A_Size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交接地址"
        android:id="@+id/TaskRelease_A_3"
        android:layout_below="@+id/TaskRelease_A_Content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_OutAddress1"
        android:layout_below="@+id/TaskRelease_A_Content"
        android:layout_toRightOf="@+id/TaskRelease_A_3"
        android:layout_alignRight="@+id/TaskRelease_A_Content"
        android:layout_alignEnd="@+id/TaskRelease_A_Content"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_OutAddress2"
        android:layout_above="@+id/TaskRelease_A_OutTime"
        android:layout_toRightOf="@+id/TaskRelease_A_Content"
        android:layout_below="@+id/TaskRelease_A_Content"
        android:focusableInTouchMode="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交接时间"
        android:id="@+id/TaskRelease_A_4"
        android:layout_below="@+id/TaskRelease_A_OutAddress1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_OutTime"
        android:layout_below="@+id/TaskRelease_A_OutAddress1"
        android:layout_toRightOf="@+id/TaskRelease_A_4"
        android:layout_alignRight="@+id/TaskRelease_A_OutAddress1"
        android:layout_alignEnd="@+id/TaskRelease_A_OutAddress1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="悬赏金币"
        android:id="@+id/TaskRelease_A_5"
        android:layout_below="@+id/TaskRelease_A_OutTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_Coins"
        android:layout_below="@+id/TaskRelease_A_OutTime"
        android:layout_toRightOf="@+id/TaskRelease_A_5"
        android:layout_alignRight="@+id/TaskRelease_A_OutTime"
        android:layout_alignEnd="@+id/TaskRelease_A_OutTime"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取快递地址"
        android:id="@+id/TaskRelease_A_6"
        android:layout_below="@+id/TaskRelease_A_Coins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_InAddress1"
        android:layout_below="@+id/TaskRelease_A_Coins"
        android:layout_toRightOf="@+id/TaskRelease_A_6"
        android:layout_alignRight="@+id/TaskRelease_A_Btn_Confirm"
        android:layout_alignEnd="@+id/TaskRelease_A_Btn_Confirm"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_InAddress2"
        android:layout_toRightOf="@+id/TaskRelease_A_InAddress1"
        android:layout_below="@+id/TaskRelease_A_Coins"
        android:focusableInTouchMode="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取快递时间"
        android:id="@+id/TaskRelease_A_7"
        android:layout_below="@+id/TaskRelease_A_InAddress1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_InTime"
        android:layout_below="@+id/TaskRelease_A_InAddress1"
        android:layout_toRightOf="@+id/TaskRelease_A_7"
        android:layout_alignRight="@+id/TaskRelease_A_InAddress1"
        android:layout_alignEnd="@+id/TaskRelease_A_InAddress1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机尾号"
        android:id="@+id/TaskRelease_A_8"
        android:layout_below="@+id/TaskRelease_A_InTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_A_Tele4"
        android:layout_below="@+id/TaskRelease_A_InTime"
        android:layout_toRightOf="@+id/TaskRelease_A_8"
        android:layout_alignRight="@+id/TaskRelease_A_InAddress1"
        android:layout_alignEnd="@+id/TaskRelease_A_InAddress1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/TaskRelease_A_Btn_Confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Getinfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskRelease_Info"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

