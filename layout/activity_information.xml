<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    tools:context="信息修改"> 
    
    <LinearLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TaskState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="修改信息"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingLeft="15dp" >
    
        <LinearLayout
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    android:background="@drawable/frame">
    
		    <TextView 
			    android:id="@+id/text_username" 
			    android:layout_width="60dp" 
			    android:layout_height="wrap_content" 
			    android:text="用户名" /> 
        
		    <EditText
			    android:id="@+id/edit_username" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:ems="10" />
		
	    </LinearLayout>	
        
        <LinearLayout
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    android:background="@drawable/frame">
    
		    <TextView 
		    	android:id="@+id/text_realname" 
		    	android:layout_width="60dp" 
		    	android:layout_height="wrap_content" 
		    	android:text="姓名" /> 
        
		    <EditText
		    	android:id="@+id/edit_realname" 
		    	android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:ems="10" />
		    
		</LinearLayout>
		
        <LinearLayout
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    android:background="@drawable/frame">
    
			<TextView 
				android:id="@+id/text_school" 
				android:layout_width="60dp" 
				android:layout_height="wrap_content" 
				android:text="学院" /> 
        
			<EditText
				android:id="@+id/edit_school" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:ems="10" />
			
		</LinearLayout>	
        
        <LinearLayout
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    android:background="@drawable/frame">
    
			<TextView 
				android:id="@+id/text_tele" 
				android:layout_width="60dp" 
				android:layout_height="wrap_content" 
				android:text="手机号" /> 
        
			<EditText
				android:id="@+id/edit_tele" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:phoneNumber="true"
				android:ems="11" />
			
		</LinearLayout>	
        
        <LinearLayout
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    android:background="@drawable/frame">
    
			<TextView 
				android:id="@+id/text_email" 
				android:layout_width="60dp" 
				android:layout_height="wrap_content" 
				android:text="邮箱" /> 
        
			<EditText
				android:id="@+id/edit_email" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:ems="20" />
			
		</LinearLayout>	
    
   </LinearLayout>	
        
   <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="bottom|center_horizontal">   
		 
		<Button 
			android:id="@+id/button_submit" 
			android:layout_width="80dp" 
			android:layout_height="wrap_content" 
			android:text="提交" />
        
		<Button 
			android:id="@+id/button_backwards" 
			android:layout_width="80dp" 
			android:layout_height="wrap_content" 
			android:text="返回" />
		
	</LinearLayout>
	
</LinearLayout>