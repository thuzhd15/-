<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             tools:context="com.example.zhouqian.myapplication.AReleaseTask">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量"
            android:id="@+id/TaskModify_A_1"/>

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_Size"
            android:entries="@array/size"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务描述"
        android:id="@+id/TaskModify_A_2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskModify_A_Content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交接地址"
        android:id="@+id/TaskModify_A_3"/>
    <TableRow>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutAddress1"
            android:entries="@array/address1"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutAddress2"
            android:focusableInTouchMode="true"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交接时间"
        android:id="@+id/TaskModify_A_4"/>
    <TableRow>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutTimeMonth"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutTimeDay"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutTimeStartHour"
            android:entries="@array/hour"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_OutTimeEndHour"
            android:entries="@array/hour"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬赏金币"
            android:id="@+id/TaskModify_A_5"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_Coins"
            android:text="0"/>
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取快递地址"
        android:id="@+id/TaskModify_A_6"/>
    <TableRow>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InAddress1"
            android:entries="@array/address1"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InAddress2"
            android:focusableInTouchMode="true"/>
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取快递时间"
        android:id="@+id/TaskModify_A_7"/>
    <TableRow>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InTimeMonth"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InTimeDay"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InTimeStartHour"
            android:entries="@array/hour"/>
        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_InTimeEndHour"
            android:entries="@array/hour"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机尾号"
            android:id="@+id/TaskModify_A_8"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TaskModify_A_Tele4"/>
    </TableRow>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/TaskModify_A_Btn_Confirm"
        android:onClick="EditConfirm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaskModify_Info"/>

</TableLayout>
